{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stanmagazynowies list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Produkt</th>
                <th>Ilosc</th>
                <th>Min_stan</th>
                <th>Max_stan</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}       
            {% set calkowitaIlosc = 0 %}
            
            {% for stanMagazynowy in product.stanyMagazynowe %}
                {% set calkowitaIlosc = calkowitaIlosc + stanMagazynowy.ilosc %}
            {% endfor %}
            
            {% if calkowitaIlosc <= product.minstan %}
                <tr class="bg-danger">
            {% elseif calkowitaIlosc > product.maxstan%}
                <tr class="bg-warning">
            {% else %}
                <tr class="bg-success">
            {% endif %}
                <td><a href="{{ path('produkt_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product }}</td>
                <td>{{ calkowitaIlosc }}</td>
                <td>{{ product.minStan }}</td>
                <td>{{ product.maxStan }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produkt_show', { 'id': product.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stanmagazynowy_new') }}">Create a new stanMagazynowy</a>
        </li>
        <li>
            <a href="{{ path('produkt_new') }}">Create a new Product</a>
        </li>
    </ul>
{% endblock %}
