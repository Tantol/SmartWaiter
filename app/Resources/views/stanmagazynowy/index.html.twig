{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stanmagazynowies list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Produkt</th>
                <th>Dostawca</th>
                <th>Ilosc w g/ml</th>
                <th>Max_stan</th>
                <th>Min_stan</th>
                <th>Cena</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stanMagazynowy in stanMagazynowies %}
            {% if stanMagazynowy.ilosc <= stanMagazynowy.minstan%}
                <tr class="bg-danger">
            {% elseif stanMagazynowy.ilosc > stanMagazynowy.maxstan%}
                <tr class="bg-warning">
            {% else %}
                <tr class="bg-success">
            {% endif %}
                <td><a href="{{ path('stanmagazynowy_show', { 'id': stanMagazynowy.id }) }}">{{ stanMagazynowy.id }}</a></td>
                <td>{{ stanMagazynowy.produkt }}</td>
                <td>{{ stanMagazynowy.dostawca }}</td>
                <td>{{ stanMagazynowy.ilosc }}</td>
                <td>{{ stanMagazynowy.maxstan }}</td>
                <td>{{ stanMagazynowy.minstan }}</td>
                <td>{{ stanMagazynowy.cena }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('stanmagazynowy_show', { 'id': stanMagazynowy.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('stanmagazynowy_edit', { 'id': stanMagazynowy.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stanmagazynowy_new') }}">Create a new stanMagazynowy</a>
        </li>
    </ul>
{% endblock %}
