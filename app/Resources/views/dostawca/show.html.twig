{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dostawca</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dostawca.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ dostawca.nazwa }}</td>
            </tr>
            <tr>
                <th>Miejscowosc</th>
                <td>{{ dostawca.miejscowosc }}</td>
            </tr>
            <tr>
                <th>Ulica</th>
                <td>{{ dostawca.ulica }}</td>
            </tr>
            <tr>
                <th>Nr_domu</th>
                <td>{{ dostawca.nrdomu }}</td>
            </tr>
            <tr>
                <th>Nr_lokalu</th>
                <td>{{ dostawca.nrlokalu }}</td>
            </tr>
            <tr>
                <th>Kod_pocztowy</th>
                <td>{{ dostawca.kodpocztowy }}</td>
            </tr>
            <tr>
                <th>Telefon</th>
                <td>{{ dostawca.telefon }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dostawca_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dostawca_edit', { 'id': dostawca.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
