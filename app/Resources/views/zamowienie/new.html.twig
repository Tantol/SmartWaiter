{% extends 'base.html.twig' %}

{% block body %}
    <h1>Zamówienie</h1>
    
    <table>
        <tbody>
            {% for pozycja in zamowienie.pozycjeZamowien %}
            <tr>
                <th>{{ pozycja.ilosc }}x {{ pozycja.danie }}</th>
                <td> Cena (narazie jest za jedno danie) {{ pozycja.cenaJedn }} zł</td>
                <td> -> {{ pozycja.status }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
        {{ form_start(pozycjaForm) }}
        {{ form_widget(pozycjaForm) }}
        <input type="submit" value="Dodaj pozycje" />
    {{ form_end(pozycjaForm) }}

    {{ form_start(zamowienieForm) }}
        {{ form_widget(zamowienieForm) }}
        <input type="submit" value="Create" />
    {{ form_end(zamowienieForm) }}

    <ul>
        <li>
            <a href="{{ path('zamowienie_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
