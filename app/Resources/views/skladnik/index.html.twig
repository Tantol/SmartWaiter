{% extends 'base.html.twig' %}

{% block body %}
    <h1>Skladniks list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Ilosc</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skladnik in skladniks %}
            <tr>
                <td><a href="{{ path('skladnik_show', { 'id': skladnik.id }) }}">{{ skladnik.id }}</a></td>
                <td>{{ skladnik.ilosc }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('skladnik_show', { 'id': skladnik.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('skladnik_edit', { 'id': skladnik.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('skladnik_new') }}">Create a new skladnik</a>
        </li>
    </ul>
{% endblock %}
